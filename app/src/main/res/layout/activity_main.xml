<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	tools:context="rahulramkumar.spanishsubjunctiveconjugator.MainActivity">

	<EditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/edittxtInputInfinitive"
		android:layout_alignParentTop="true"
		android:layout_alignParentLeft="true"
		android:hint="@string/txt_input_infinitive_hint"
		android:inputType="textNoSuggestions|text"/>

	<Spinner
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/spinSubject"
		android:layout_below="@+id/edittxtInputInfinitive"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"/>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/btn_conjugate_text"
		android:id="@+id/btnForm"
		android:onClick="formSubjunctive"
		android:layout_below="@+id/spinSubject"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="5dp"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:id="@+id/txtviewFormedVerb"
		android:layout_below="@+id/btnForm"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="30dp"/>
</RelativeLayout>
